<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Pet's-R-US Assignment</title>
        <link rel="stylesheet" href="/styles/site.css">
        <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,700;1,500&family=Quicksand:wght@400;500;700&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    </head>
    <body>
        <header class="header">
            <%- include('./partials/header.ejs'); %>
        </header>

        <section class="hero">
                <div class="backgroundImage"></div>
                <h1 class="landing-title">Pets-R-US</h1>
                <h3>Your one stop shop for all your pet's needs!</h3>
                <a href="./register" class="btn btn-primary" id="btnRegister">Sign up for a free account</a>
            </section> 
        <section>
            <div class="company-info">
                <h2 class="title">Customer List</h2><br>
                <hr class="dotted"><br>
                <div class="service-prices">
                    <div class="card">
                        <div class="card-content" id="table">
                            <% if(customers.length > 0 ) { %>
                            <table class="table"> 
                                <tr >
                                    <th>Customer ID</th>
                                    <th>Email</th>
                                </tr>
                                <tbody>
                                    <% customers.forEach(function(customer) { %>
                                        <tr class="tableHover">
                                            <td>
                                                <%= customer.customerId %>
                                            </td>
                                            <td>
                                                <%= customer.email %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                            <% } else { %>
                            <h3>Customers have not been added to the MongoDB database. Try adding some!</h3>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <footer>
            <%- include('./partials/footer.ejs'); %>
        </footer>
    </body>
</html>